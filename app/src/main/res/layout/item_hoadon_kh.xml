<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:backgroundTint="@color/ethereal_blue"
    android:gravity="center"
    app:cardElevation="3dp"
    app:cardPreventCornerOverlap="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:src="@drawable/anh_hoadon" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/tv_mahd"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/fonttieudeextrabold"
                    android:text="Mã hóa đơn"
                    android:textColor="@color/colortextChu"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_ngaylap"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/fonttieudeextrabold"
                    android:text="Ngày mua"
                    android:textColor="@color/colortextChu"
                    android:textSize="13sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_tongsanpham"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fonttieudeextrabold"
                android:text="Tổng sản phẩm"
                android:textColor="@color/colortextChu"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_hoten"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fonttieudeextrabold"
                android:text="Họ tên"
                android:textColor="@color/colortextChu"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_sdt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fonttieuderegular"
                android:text="Số điện thoại"
                android:textColor="@color/colortextChu"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_diachi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fonttieuderegular"
                android:text="Địa chỉ"
                android:textColor="@color/colortextChu"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_tongtien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fonttieudeextrabold"
                android:text="Tổng tiền"
                android:textColor="@color/colortextChu"
                android:textSize="13sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_trangthai"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/fonttieuderegular"
                    android:text="Trạng thái"
                    android:textColor="@color/colortextChu"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/btn_thaydoiTT"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_qmk"
                    android:fontFamily="@font/open_sans_bold"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="XÁC NHẬN"
                    android:textColor="@color/colortextChu" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/img_delete"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="top"
            android:src="@drawable/logo_delete_2" />

    </LinearLayout>

</androidx.cardview.widget.CardView>