<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/ethereal_blue"
    >

    <ImageView
        android:layout_width="80dp"
        android:layout_height="5dp"
        android:layout_gravity="center"
        android:layout_margin="4dp"
        android:background="@drawable/line_bottom_dialog" />

    <TextView
        android:layout_marginTop="10dp"
        android:text="THÊM LOẠI SẢN PHẨM"
        android:textSize="22dp"
        android:textColor="@color/colortextChu"
        android:fontFamily="@font/fonttieudeextrabold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <LinearLayout
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:fontFamily="@font/fonttieudeextrabold"
            android:text="Tên thể loại:"
            android:layout_marginBottom="5dp"
            android:textSize="17sp"
            android:textColor="@color/colortextChu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <EditText
            android:id="@+id/ed_tenloai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_dn"
            android:drawableStart="@drawable/category_book"
            android:hint="Tên thể loại"
            android:inputType="text"
            android:padding="10dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:gravity="center"
            android:id="@+id/btn_add"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/btn_qmk"
            android:text="THÊM"
            android:fontFamily="@font/fonttieudeextrabold"
            android:textSize="18sp"
            android:textColor="@color/colortextChu" />

        <TextView
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/btn_qmk"
            android:text="HỦY"
            android:fontFamily="@font/fonttieudeextrabold"
            android:textSize="18sp"
            android:textColor="@color/colortextChu" />

    </LinearLayout>

</LinearLayout>