<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ManHinhWelcome">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_welcome"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/welcome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        />

    <TextView
        android:id="@+id/tv_wc_cm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Chào bạn đến với ứng dụng của nhóm mình"
        android:textStyle="bold|italic"
        android:textColor="@color/colortextChu"
        android:fontFamily="@font/fonttieuderegular"
        android:textSize="18dp"

        android:layout_below="@+id/lottie_welcome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        />

</RelativeLayout>