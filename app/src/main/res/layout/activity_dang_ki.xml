<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".DangKi">

    <TextView
        android:id="@+id/tv_dk_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/fonttieudeextrabold"
        android:text="Đăng Kí Tài Khoản"
        android:textColor="@color/colortextChu"
        android:textSize="40dp" />

    <!--    Dòng 1-->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_dk_tk"
        android:layout_width="match_parent"
        android:layout_height="80dp"

        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"

        android:hint="Nhập tài khoản"
        android:paddingBottom="10dp"
        android:textColorHint="@color/colortextChu"
        app:errorEnabled="true"
        app:errorTextColor="#F10000">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tiedt_dk_tk"
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:layout_gravity="center_vertical"
            android:background="@drawable/edit_dn"
            android:drawableLeft="@drawable/account"
            android:inputType="text"

            android:paddingLeft="10dp" />
    </com.google.android.material.textfield.TextInputLayout>
    <!--    Dòng 2-->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_dk_ps"
        android:layout_width="match_parent"
        android:layout_height="80dp"

        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"

        android:hint="Nhập mật khẩu"
        android:textColorHint="@color/colortextChu"
        app:errorEnabled="true"
        app:errorTextColor="#F10000">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tiedt_dk_ps"
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:layout_gravity="center_vertical"
            android:background="@drawable/edit_dn"
            android:drawableLeft="@drawable/password"
            android:inputType="text"
            android:paddingLeft="10dp" />
    </com.google.android.material.textfield.TextInputLayout>
    <!--    Dòng 3-->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_dk_reps"
        android:layout_width="match_parent"
        android:layout_height="80dp"

        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"

        android:hint="Nhập lại mật khẩu"
        android:textColorHint="@color/colortextChu"
        app:errorEnabled="true"
        app:errorTextColor="#F10000">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tiedt_dk_reps"
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:layout_gravity="center_vertical"
            android:background="@drawable/edit_dn"
            android:drawableLeft="@drawable/password"
            android:inputType="text"

            android:paddingLeft="10dp" />
    </com.google.android.material.textfield.TextInputLayout>
    <!--    Dòng 4-->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_dk_ht"
        android:layout_width="match_parent"
        android:layout_height="80dp"

        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"

        android:hint="Nhập họ tên"
        android:textColorHint="@color/colortextChu"
        app:errorEnabled="true"
        app:errorTextColor="#F10000">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tiedt_dk_ht"
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:layout_gravity="center_vertical"
            android:background="@drawable/edit_dn"
            android:drawableLeft="@drawable/name"
            android:inputType="text"

            android:paddingLeft="10dp" />
    </com.google.android.material.textfield.TextInputLayout>
    <!--    Dòng 5-->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_dk_sdt"
        android:layout_width="match_parent"
        android:layout_height="80dp"

        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"

        android:hint="Nhập SDT"
        android:textColorHint="@color/colortextChu"
        app:errorEnabled="true"
        app:errorTextColor="#F10000">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tiedt_dk_sdt"
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:layout_gravity="center_vertical"
            android:background="@drawable/edit_dn"
            android:drawableLeft="@drawable/telephone"
            android:inputType="text"

            android:paddingLeft="10dp" />
    </com.google.android.material.textfield.TextInputLayout>
    <!--    Dòng 6-->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_dk_dc"
        android:layout_width="match_parent"
        android:layout_height="80dp"

        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"

        android:hint="Nhập địa chỉ"
        android:textColorHint="@color/colortextChu"
        app:errorEnabled="true"
        app:errorTextColor="#F10000">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tiedt_dk_dc"
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:layout_gravity="center_vertical"
            android:background="@drawable/edit_dn"
            android:drawableLeft="@drawable/email"
            android:inputType="text"

            android:paddingLeft="10dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <!--    2 Nút Đăng Kí và Trở Về-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp">

        <Button
            android:id="@+id/btn_dk_dk"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_dn"
            android:fontFamily="@font/fonttieudeextrabold"
            android:text="Đăng Kí"
            android:textColor="@color/colortextChu" />

        <Button
            android:id="@+id/btn_dk_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/btn_dn"
            android:fontFamily="@font/fonttieudeextrabold"
            android:text="Trở Về"
            android:textColor="@color/colortextChu" />
    </LinearLayout>

</LinearLayout>