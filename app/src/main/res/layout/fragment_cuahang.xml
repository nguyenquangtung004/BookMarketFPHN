<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <androidx.cardview.widget.CardView
            android:layout_margin="10dp"
            app:cardCornerRadius="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:background="#F3F3F3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                >
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/ic_search"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        />
                    <EditText
                        android:fontFamily="@font/open_sans_regular"
                        android:id="@+id/ed_timkiem"
                        android:textSize="13sp"
                        android:padding="5dp"
                        android:background="@null"
                        android:hint="Nhập tên sách"
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:fontFamily="@font/open_sans_regular"
                        android:textSize="13sp"
                        android:layout_marginRight="10dp"
                        android:text="Tìm kiếm..."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:cardCornerRadius="7dp"
            app:cardPreventCornerOverlap="true"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            >

            <ViewFlipper
                android:id="@+id/viewFlipper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:flipInterval="3000"
                android:autoStart="true"
                >
                <ImageView
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/banner1"
                    />
                <ImageView
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/banner2"
                    />
                <ImageView
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/banner3"
                    />
            </ViewFlipper>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:text="Danh Mục"
            android:fontFamily="@font/open_sans_bold"
            android:textSize="18sp"
            android:textColor="#FF3D00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <HorizontalScrollView
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <androidx.cardview.widget.CardView
                    android:layout_margin="5dp"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="7dp"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    >
                    <LinearLayout
                        android:id="@+id/btn_tatca"
                        android:background="#F3F3F3"
                        android:padding="7dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                        <androidx.cardview.widget.CardView
                            app:cardCornerRadius="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            >
                            <ImageView
                                android:scaleType="centerCrop"
                                android:src="@drawable/book_trangchu"
                                android:layout_width="80dp"
                                android:layout_height="60dp"
                                />
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:textSize="13sp"
                            android:fontFamily="@font/open_sans_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tất cả"
                            />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_margin="5dp"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="7dp"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    >

                    <LinearLayout
                        android:id="@+id/btn_thieunhi"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#F3F3F3"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="7dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="5dp">

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="60dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/anhtrangchu1" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/open_sans_regular"
                            android:text="Thiếu nhi"
                            android:textSize="13sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_margin="5dp"
                    app:cardElevation="2dp"
                    android:layout_width="80dp"
                    app:cardCornerRadius="7dp"
                    android:layout_height="wrap_content"
                    >

                    <LinearLayout
                        android:id="@+id/btn_tailieu"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#F3F3F3"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="7dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="5dp">

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="60dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/anhtrangchu2" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/open_sans_regular"
                            android:text="Tài liệu"
                            android:textSize="13sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_margin="5dp"
                    app:cardElevation="2dp"
                    android:layout_width="80dp"
                    app:cardCornerRadius="7dp"
                    android:layout_height="wrap_content"
                    >
                    <LinearLayout
                        android:id="@+id/btn_ngungon"
                        android:padding="7dp"
                        android:gravity="center"
                        android:background="#F3F3F3"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                        <androidx.cardview.widget.CardView
                            app:cardCornerRadius="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            >
                            <ImageView
                                android:scaleType="centerCrop"
                                android:src="@drawable/anhtrangchu3"
                                android:layout_width="80dp"
                                android:layout_height="60dp"
                                />
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:textSize="13sp"
                            android:fontFamily="@font/open_sans_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ngụ ngôn"
                            />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_margin="5dp"
                    app:cardElevation="2dp"
                    android:layout_width="80dp"
                    app:cardCornerRadius="7dp"
                    android:layout_height="wrap_content"
                    >
                    <LinearLayout
                        android:id="@+id/btn_truyen"
                        android:padding="7dp"
                        android:gravity="center"
                        android:background="#F3F3F3"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                        <androidx.cardview.widget.CardView
                            app:cardCornerRadius="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            >
                            <ImageView
                                android:scaleType="centerCrop"
                                android:src="@drawable/anhtrangchu4"
                                android:layout_width="80dp"
                                android:layout_height="60dp"
                                />
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:textSize="13sp"
                            android:fontFamily="@font/open_sans_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Truyện "
                            />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:text="Sách"
            android:fontFamily="@font/open_sans_bold"
            android:textSize="18sp"
            android:textColor="#FF3D00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <androidx.recyclerview.widget.RecyclerView
                android:scrollbars="none"
                android:id="@+id/recyclerSP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>