<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/cinderella"
    tools:context=".Fragment.TaiKhoanFragment">

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                >
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <TextView
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/open_sans_regular"
                    android:textSize="23sp"
                    android:textStyle="bold"
                    android:textColor="@color/cinderella"
                    android:layout_marginTop="10dp"
                    android:id="@+id/tv_hoten"
                    android:text="Họ tên"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    app:cardCornerRadius="75dp"
                    app:cardElevation="10dp"
                    >
                    <ImageView
                        android:src="@drawable/avata"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <LinearLayout
                        android:gravity="center"
                        android:weightSum="4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <ImageView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:src="@drawable/account"
                            />
                        <TextView
                            android:fontFamily="@font/open_sans_regular"
                            android:id="@+id/tv_taikhoan"
                            android:layout_weight="3"
                            android:textSize="16sp"
                            android:text="Tài khoản"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:weightSum="4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <ImageView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:src="@drawable/password"
                            />
                        <TextView
                            android:fontFamily="@font/open_sans_regular"
                            android:layout_weight="3"
                            android:textSize="16sp"
                            android:text="******"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:weightSum="4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <ImageView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:src="@drawable/phone"
                            />
                        <TextView
                            android:fontFamily="@font/open_sans_regular"
                            android:id="@+id/tv_sdt"
                            android:layout_weight="3"
                            android:textSize="16sp"
                            android:text="Số điện thoại"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:weightSum="4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <ImageView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:src="@drawable/address"
                            />
                        <TextView
                            android:fontFamily="@font/open_sans_regular"
                            android:id="@+id/tv_diachi"
                            android:layout_weight="3"
                            android:textSize="16sp"
                            android:text="Địa chỉ"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            />
                    </LinearLayout>
        </LinearLayout>
            </LinearLayout>
            </androidx.cardview.widget.CardView>
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="5dp"
            app:cardElevation="3dp"
            android:layout_margin="5dp"
            >
            <LinearLayout
                android:id="@+id/btn_CSKH"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <androidx.cardview.widget.CardView
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:cardCornerRadius="5dp"
                    android:backgroundTint="#00ED0A"
                    >
                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/phone"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        />
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textSize="16sp"
                    android:text="Chăm sóc khách hàng"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="5dp"
            android:layout_margin="5dp"
            app:cardElevation="3dp"
            >
            <LinearLayout
                android:id="@+id/btn_doiThongTin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <androidx.cardview.widget.CardView
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:cardCornerRadius="5dp"
                    android:backgroundTint="#FF9800"
                    >
                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/account"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        />
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textSize="16sp"
                    android:text="Thay đổi thông tin"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            android:layout_margin="5dp"
            app:cardElevation="3dp"
            >
            <LinearLayout
                android:id="@+id/btn_doimatkhau"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <androidx.cardview.widget.CardView
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:cardCornerRadius="5dp"
                    android:backgroundTint="#673AB7"
                    >
                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/password"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        />
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textSize="16sp"
                    android:text="Đổi mật khẩu"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="5dp"
            android:layout_margin="5dp"
            app:cardElevation="3dp"
            >
            <LinearLayout
                android:id="@+id/btn_dangxuat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <androidx.cardview.widget.CardView
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:cardCornerRadius="5dp"
                    android:backgroundTint="#FF1100"
                    >
                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/signout"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        />
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textSize="16sp"
                    android:text="Đăng xuất"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>