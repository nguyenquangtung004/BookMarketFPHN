<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    app:cardElevation="3dp"
    android:layout_margin="5dp"
    android:backgroundTint="@color/athens_grey"
    app:cardPreventCornerOverlap="true"
    >

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:id="@+id/img_anhsp"
            android:src="@mipmap/ic_launcher"
            android:layout_width="100dp"
            android:layout_height="80dp"
            />

        <LinearLayout
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            >
            <TextView
                android:textStyle="bold"
                android:fontFamily="@font/open_sans_regular"
                android:textSize="13sp"
                android:id="@+id/tv_masp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mã sản phẩm"
                />

            <TextView
                android:fontFamily="@font/open_sans_bold"
                android:textSize="15sp"
                android:id="@+id/tv_tensp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên sản phẩm"
                />

            <TextView
                android:fontFamily="@font/open_sans_regular"
                android:textSize="13sp"
                android:id="@+id/tv_loaisp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thể loại"
                />

            <TextView
                android:fontFamily="@font/open_sans_regular"
                android:textSize="13sp"
                android:id="@+id/tv_motasp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mô tả"
                />
            <TextView
                android:fontFamily="@font/open_sans_regular"
                android:textSize="13sp"
                android:textColor="#FF0000"
                android:id="@+id/tv_giasp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giá tiền"
                android:textStyle="bold"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            >
            <ImageView
                android:id="@+id/img_chucnang"
                android:src="@drawable/ic_more"
                android:layout_width="25dp"
                android:layout_height="25dp"
                />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>